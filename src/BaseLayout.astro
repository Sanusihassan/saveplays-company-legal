---
const { title, description } = Astro.props;
import Footer from "saveplays-footer/src/partials/Footer.astro";
import NavBar from "saveplays-navbar/components/NavBar.tsx";

import "./index.scss";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Averia+Serif+Libre:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Fraunces:ital,opsz,wght@0,9..144,100..900;1,9..144,100..900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <header>
            <NavBar lang="" client:load />
        </header>

        <main>
            <slot />
        </main>

        <Footer lang="" />
    </body>
</html>
